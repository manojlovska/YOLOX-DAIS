Bootstrap: docker
From: pytorch/pytorch:1.12.1-cuda11.3-cudnn8-runtime

%files
    . /workspace/yolox

%environment
    export HOME=/workspace/yolox

%post
    apt-get update -y
    apt-get install -y gcc \
                        g++ \
                        automake \
                        build-essential \
                        bzip2 \
                        wget \
                        git \
                        default-jre \
                        unzip \
                        ffmpeg \
                        libsm6 \
                        libxext6 \
                        cmake


    python3 -m pip install --upgrade pip

    # Use conda to install pip, numpy
    python3 -m pip install dvc \
            dvclive \
            wandb \
            opencv-python==3.4.9.31 \
            loguru \
            tqdm \
            torchvision \
            ninja \
            tabulate \
            psutil \
            tensorboard \
            shapely \
            thop
    cd /workspace/yolox
    pip install -e .